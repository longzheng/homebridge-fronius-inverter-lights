{
  "pluginAlias": "FroniusInverterLightsPlatform",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "inverterIp": {
        "title": "Inverter IP",
        "type": "string",
        "required": true,
        "placeholder": "192.168.1.123"
      },
      "pollInterval": {
        "title": "Polling interval (seconds)",
        "type": "integer",
        "required": true,
        "default": 10
      },
      "battery": {
        "title": "Show battery accessories",
        "type": "boolean",
        "default": false
      }
    }
  }
}