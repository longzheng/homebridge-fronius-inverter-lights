{
  "pluginAlias": "FroniusInverterLightsPlatform",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "inverterIp": {
        "title": "Inverter IP",
        "type": "string",
        "required": true,
        "placeholder": "192.168.1.123"
      },
      "pollInterval": {
        "title": "Polling interval (seconds)",
        "type": "integer",
        "required": true,
        "default": 10
      },
      "pvMaxPower": {
        "title": "PV max power capacity (watts)",
        "description": "If configured, shows the PV lightbulb brightness % as a proportion to the max PV capacity",
        "type": "integer",
        "required": false,
        "placeholder": "6000"
      }
    }
  }
}